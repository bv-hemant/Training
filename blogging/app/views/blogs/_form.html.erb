<%= form_with model: @blog, url: user_blogs_path do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @blog.errors.full_messages_for(:title).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @blog.errors.full_messages_for(:body).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
