<% if @blog %>
<h1><%= @blog.title %></h1>

<p><%= @blog.body %></p>

<ul>
  <li><%= link_to "Edit", edit_blog_path(@blog) %></li>
   <li><%= link_to "Destroy", @blog,
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>
<% else %>
<h4>Blog does not exists</h4>
<% end %>